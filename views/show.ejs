<% include ./partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header"><%= blog.title %></div>  
    <div class="ui top attached">
        <div class="item">
            <img class="ui centered rounded image" src="<%= blog.image %>" alt="<%= blog.title %> Image">
            <div class="content">
                <meta><%= blog.created.toDateString() %></meta>                   
            </div> 
            <div class="description">
                <p><%= blog.body %></p>  
            </div>
            <a class="ui button inverted blue" href="/blogs/<%= blog._id %>/edit">Edit</a>
            <form style="display: inline" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                <button class="ui button inverted red">Delete</button>
            </form>
        </div>
    </div>    
</div>

<% include ./partials/footer %>